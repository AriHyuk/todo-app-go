  "item": [
    {
      "name": "Get All Todos",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/todos"
      }
    },
    {
      "name": "Create Todo",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Belajar Golang\",\n  \"completed\": false\n}"
        },
        "url": "{{base_url}}/todos"
      }
    },
    {
      "name": "Update Todo",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Belajar Golang Level Lanjut\",\n  \"completed\": true\n}"
        },
        "url": "{{base_url}}/todos/{{todoId}}"
      }
    },
    {
      "name": "Delete Todo",
      "request": {
        "method": "DELETE",
        "url": "{{base_url}}/todos/{{todoId}}"
      }
    }
  ]
